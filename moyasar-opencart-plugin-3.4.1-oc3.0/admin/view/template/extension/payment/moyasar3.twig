{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
         <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
    
    <div class="tab-content">
     <div class="tab-pane active" id="tab-general">
    <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-body">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-moyasar3" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="moyasar_api_key"><span data-toggle="tooltip" title="{{ help_api_key }}">{{ entery_api_key }}</span>
            </label>
            <div class="col-sm-10">
              <input id="moyasar-api-key" class="form-control" type="text" name="payment_moyasar3_api_key" value="{{ payment_moyasar3_api_key }}" placeholder="{{ entery_api_key }}" size="60">
              </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="moyasar_api_secret_key">
              {{ entery_api_secret_key }}
            </label>
            <div class="col-sm-10">
              <input id="moyasar-api-secret-key" class="form-control" type="text" name="payment_moyasar3_api_secret_key" value="{{ payment_moyasar3_api_secret_key }}" placeholder="{{ entery_api_secret_key }}" size="60">
              </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="payment_moyasar3_payment_type">{{ entry_payment_type }}</label>
            <div class="col-sm-10">
              <p>
                <input type="hidden" name="payment_moyasar3_payment_type[cc]" value="0" />
                <input type='checkbox' name='payment_moyasar3_payment_type[cc]' id='moyasar3_payment_type' value='1' 
                {% if payment_moyasar3_payment_type['cc'] is defined and payment_moyasar3_payment_type['cc'] == 1 %}
                checked="checked" {% else %} '' {% endif %} /> {{ entery_enable_creditcard }}
              </p>
              <p>
                <input type="hidden" name="payment_moyasar3_payment_type[stcpay]" value="0" />
                <input type='checkbox' name='payment_moyasar3_payment_type[stcpay]' value='1' {% if payment_moyasar3_payment_type['stcpay'] is defined and payment_moyasar3_payment_type['stcpay'] == 1 %} checked="checked" {% else %} '' {% endif %} /> {{ entery_enable_stc_pay }}
              </p>
              <p>
                <input type="hidden" name="payment_moyasar3_payment_type[applepay]" value="0" />
                <input type='checkbox' name='payment_moyasar3_payment_type[applepay]' value='1' {% if payment_moyasar3_payment_type['applepay'] is defined and payment_moyasar3_payment_type['applepay'] == 1 %} checked="checked" {% else %} '' {% endif %} /> {{ entery_enable_apple_pay }}
              </p>
            </div>
          </div>
      
<div class="form-group">
    <label class="col-sm-2 control-label" for="payment_moyasar3_order_status"><span data-toggle="tooltip" title="{{ help_order_status }}">{{ entry_order_status_id }}</span></label>
    <div class="col-sm-10">
        <select name="payment_moyasar3_order_status_id" id="payment_moyasar3_order_status_id" class="form-control">
            {% for order_status in order_statuses %}
            {% if order_status.order_status_id == payment_moyasar3_order_status_id %} 
            <option value="{{ order_status.order_status_id }}" selected="selected">
            {{ order_status.name }} </option>
            {% else %}
            <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
            {% endif %}
            {% endfor %}
        </select>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="payment_moyasar3_failed_order_status">{{ entry_failed_order_status_id }}</label>
    <div class="col-sm-10">
        <select name="payment_moyasar3_failed_order_status_id" id="payment_moyasar3_failed_order_status_id" class="form-control">
            {% for order_status in order_statuses %}
            {% if order_status.order_status_id == payment_moyasar3_failed_order_status_id %} 
            <option value="{{ order_status.order_status_id }}" selected="selected">
            {{ order_status.name }} </option>
            {% else %}
            <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
            {% endif %}
            {% endfor %}
        </select>
    </div>
</div>
<div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-2">
              <select name="payment_moyasar3_status" id="input-status" class="form-control">
                {% if payment_moyasar3_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_moyasar3_sort_order" value="{{ payment_moyasar3_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
                </div>
              </div>
      </form>
      </div> 
    </div>
    </div>
</div>
    </div>
    </div>
    <style>
      .form-group label {
        word-wrap: break-word;
      }
    </style>

{{ footer }}