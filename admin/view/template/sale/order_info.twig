                        <thead>
                        <tr>
                            <td>{{ text_comment }}</td>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{ comment }}</td>
                        </tr>
                        </tbody>
                    </table>
                {% endif %} </div>
        </div>
