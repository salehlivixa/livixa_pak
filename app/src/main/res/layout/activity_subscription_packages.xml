<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#8669FC"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            >


            <RelativeLayout
                android:id="@+id/rl_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size"
                >


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    android:onClick="onbackButttonClick"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montbold"
                    android:text="Subscription"
                    android:textColor="#fff"
                    android:textSize="20sp" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/whitebg"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_height="50dp"
            android:background="#fff"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_width="match_parent">


            <TextView android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Package ID"
                android:fontFamily="@font/montbold"
                android:layout_width="80dp"/>


            <View
                android:layout_height="match_parent"
                android:background="#BBBCBE"
                android:layout_width="1dp"/>


            <TextView android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/montbold"
                android:text="Description"
                android:layout_width="150dp"/>




            <View
                android:layout_height="match_parent"
                android:background="#BBBCBE"
                android:layout_width="1dp"/>

            <TextView android:layout_height="match_parent"
                android:layout_weight="3.7"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="ExpiryDate"
                android:fontFamily="@font/montbold"
                android:layout_width="50dp"/>

        </LinearLayout>


        <ListView android:id="@+id/subscriptionlistview"
            android:cacheColorHint="#00000000"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

        </ListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/tariffEmptylayout"
            android:layout_weight="6"
            android:visibility="gone"

            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_no_data"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No data available!"
                android:textColor="#000"
                android:textSize="25sp"
                android:textAlignment="center"
                android:fontFamily="@font/montbold"
                />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Thereâ€™re no data to show right now."
                android:textAlignment="center"
                android:fontFamily="@font/montsemibold"
                android:layout_gravity="center_vertical|center_horizontal"
                />


        </LinearLayout>



    </LinearLayout>



</RelativeLayout>