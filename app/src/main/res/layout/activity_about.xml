<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash" >

    <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onbackButttonClick"
                    android:clickable="true"
                    android:padding="@dimen/padding_large"
                    android:src="@drawable/ic_back" />
    
    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textLy"
        android:layout_marginTop="170dp"
        android:layout_width="match_parent">
    
    <TextView android:layout_height="wrap_content"
              android:text="Livixa Smart App"
              android:textSize="20dp"
              android:textStyle="bold"
              android:layout_width="wrap_content"/>
    
    <TextView android:layout_height="wrap_content"
              android:text="Version 0.0.9"
              android:textSize="18dp"
              android:layout_marginTop="5dp"
              android:layout_width="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/textLy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_max_x_large1" />
    
    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:gravity="center"
        
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:layout_width="match_parent">
    
    <TextView android:layout_height="wrap_content"
              android:text="Copyrights Â© 2017 Livixa"
              android:textSize="18dp"
              
              android:layout_width="wrap_content"/>
    
    <TextView android:layout_height="wrap_content"
              android:text="All rights reserved"
              android:textSize="18dp"
              
              android:layout_width="wrap_content"/>
    </LinearLayout>
    

</RelativeLayout>