<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <LinearLayout
        android:id="@+id/tileLayout"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/corner_border_white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="151dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:padding="@dimen/margin_10dp"
            android:background="@drawable/corner_border_gray"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img_placeHolder"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/placeholder" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/margin_10dp"
            >

            <com.livixa.apacam.client.widget.CustomTextView
                android:id="@+id/iv_bedName"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montsemibold"
                android:text="Bed"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:textColor="#002B54" />

            <ImageView
                android:id="@+id/roomsSettingIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit_room_ic"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_10dp"

                />
        </RelativeLayout>

    </LinearLayout>






</RelativeLayout>
