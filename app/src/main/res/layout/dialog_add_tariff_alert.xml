<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/screen_faded"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <LinearLayout

        android:layout_width="match_parent"
        android:gravity="center"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_border_light_gray"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"
                android:paddingTop="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:paddingBottom="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="vertical"

                    >


                    <RelativeLayout
                        android:id="@+id/rl_bar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/action_bar_size"
                        android:layout_marginTop="@dimen/margin_10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montbold"
                            android:text="@string/LowerLimitAlert"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="16sp" />


                        <ImageView
                            android:id="@+id/tv_Cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="@dimen/margin_15dp"
                            android:clickable="true"
                            android:src="@drawable/ic_close_ic" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"

                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_10dp">


                        <com.livixa.apacam.client.widget.CustomEditText
                            android:id="@+id/lowerLimitAlert"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/add_room_popup_tv_bg"
                            android:fontFamily="@font/montsemibold"
                            android:hint="1000"
                            android:textColor="@color/grgray"
                            android:textSize="18sp" />


                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="vertical"

                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/action_bar_size"
                        android:layout_marginTop="@dimen/margin_10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montbold"
                            android:text="@string/MediumLimitAlert"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="16sp" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"

                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_10dp">


                        <com.livixa.apacam.client.widget.CustomEditText
                            android:id="@+id/mediumLimitAlert"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/add_room_popup_tv_bg"
                            android:fontFamily="@font/montbold"
                            android:hint="2000"
                            android:textColor="@color/grgray"
                            android:textSize="18sp" />


                    </RelativeLayout>
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="vertical"

                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/action_bar_size"
                        android:layout_marginTop="@dimen/margin_10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montbold"
                            android:text="@string/HighLimitAlert"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="16sp" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"

                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_10dp">


                        <com.livixa.apacam.client.widget.CustomEditText
                            android:id="@+id/highLimitAlert"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/add_room_popup_tv_bg"
                            android:fontFamily="@font/montbold"
                            android:hint="3000"
                            android:textColor="@color/grgray"
                            android:textSize="18sp" />


                    </RelativeLayout>
                </LinearLayout>





                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <object.p2pipcam.system.MyTextView

                        android:layout_width="match_parent"
                        android:layout_weight="4.8"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:focusableInTouchMode="true"
                        android:id="@+id/tv_Done"
                        android:background="@drawable/ic_reset_password_btn"
                        android:layout_marginRight="10dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/Donee"
                        android:textColor="#fff"
                        android:textSize="22dp" />



                </LinearLayout>





            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</RelativeLayout>