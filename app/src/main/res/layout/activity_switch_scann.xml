<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#8669FC"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            >


            <RelativeLayout
                android:id="@+id/rl_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size"
                >


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    android:onClick="onbackButttonClick"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montbold"
                    android:text="@string/ScanSwitches"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <com.livixa.apacam.client.widget.CustomTextView
                    android:id="@+id/startScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:clickable="true"
                    android:fontFamily="@font/montbold"
                    android:onClick="onStartScann"
                    android:text="@string/Start"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/whitebg"
        android:orientation="vertical"
        >


        <GridView android:id="@+id/switchListView"
            android:cacheColorHint="#00000000"
             android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:gravity="center"
            android:columnWidth="200dp"
            android:verticalSpacing="10dp"
            >

        </GridView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/switchEmptylayout"
            android:layout_weight="6"
            android:visibility="gone"

            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_no_data"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No data available!"
                android:textColor="#000"
                android:textSize="25sp"
                android:textAlignment="center"
                android:fontFamily="@font/montbold"
                />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Thereâ€™re no data to show right now."
                android:textAlignment="center"
                android:fontFamily="@font/montsemibold"
                android:layout_gravity="center_vertical|center_horizontal"
                />


        </LinearLayout>





    </LinearLayout>

<!--addednow-->
    <LinearLayout
        android:id="@+id/cancelButtonLyout"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_centerInParent="true"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#99000000"
        android:gravity="center"
        >


        <LinearLayout android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="100dp">


            <com.livixa.apacam.customprogressbar.AVLoadingIndicatorView
                android:id="@+id/avi"
                app:indicatorName="BallPulseIndicator"
                android:layout_width="60dp"
                android:layout_height="60dp"
                style="@style/AVLoadingIndicatorView.Large"
                />

            <TextView android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:gravity="center"
                android:text="@string/Pleasewaitwhilescanning"
                android:layout_width="match_parent"/>


        </LinearLayout>

        <object.p2pipcam.system.MyTextView

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:focusableInTouchMode="true"
            android:id="@+id/tv_Cancel"
            android:background="@drawable/popup_button_selector_white"
            android:alpha="0.5"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/Cancel"
            android:textColor="#2072C7"
            android:textSize="18dp" />


    </LinearLayout>



</RelativeLayout>