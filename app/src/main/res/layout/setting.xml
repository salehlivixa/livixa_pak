<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
       
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentTop="true"
        style="@style/top_bg_style"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="13dp"
            android:background="@drawable/button_selector_common"
            android:maxWidth="100dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="@string/Back"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_title_size" />
        
        
        <LinearLayout android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            		  android:orientation="horizontal"
                      android:layout_width="wrap_content">
        <object.p2pipcam.system.MyTextView
            android:id="@+id/tv_camera_setting_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            
            android:layout_marginLeft="10.0dip"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="200dp"
            android:scrollHorizontally="true"
            android:shadowColor="@color/color_shadow"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:text="@string/settingtitle"
            android:textColor="@color/color_white"
            android:textSize="18dp"
             />
        
        
          <object.p2pipcam.system.MyTextView
            android:id="@+id/tv_camera_setting"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_camera_setting_heading"
            android:layout_marginLeft="10.0dip"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="200dp"
            android:scrollHorizontally="true"
            android:shadowColor="@color/color_shadow"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:text="@string/setting"
            android:textColor="@color/color_white"
            android:textSize="16dp"
             />
          </LinearLayout>

       
    </RelativeLayout>
    
    
    

    <LinearLayout
        android:id="@+id/bottom"
        style="@style/top_bg_style"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:layout_below="@+id/top"
            android:src="@drawable/background_separate_vertical" />

        <TextView
            android:id="@+id/tv_camera_setting1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:shadowColor="@color/color_shadow"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColor="@color/color_white"
            android:textSize="18.0sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- android:layout_above="@+id/bottom" -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:orientation="vertical" >

            <Button
                android:id="@+id/setting_wifi"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:background="@color/white"
                
                android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:gravity="left|center_vertical"
                
                android:text="@string/WifiSetting"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               
                android:background="#e4e4e4" />

            <Button
                android:id="@+id/setting_use"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textColor="#000000"
                android:background="@color/white"
               
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/UserSetting"
                android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:textSize="16sp" />

           <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               
                android:background="#e4e4e4" />

            <Button
                android:id="@+id/setting_time"
                android:layout_width="match_parent"
                android:layout_height="55dp"
               android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:textColor="#000000"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/Time"
                android:textSize="16sp" />

           <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               
                android:background="#e4e4e4" />

            <Button
                android:id="@+id/setting_user_time"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                 android:textColor="#000000"
                android:background="@drawable/newbuttonbuttom"
                android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/set_user_time_title"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/setting_ftp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                
                 android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:background="@drawable/newbuttontop"
               android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/setting_ftp"
                android:textSize="16sp" 
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               
                android:background="#e4e4e4" />

            <Button
                android:id="@+id/setting_alerm"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textColor="#000000"
                android:background="@color/white"
               android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/AlarmSetting"
                android:textSize="16sp" />

          <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               
                android:background="#e4e4e4" />

            <Button
                android:id="@+id/setting_mail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
               android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:textColor="#000000"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/setting_mail"
                android:textSize="16sp" 
                android:visibility="gone"/>
            
       <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               
                android:background="#e4e4e4" />
               

          

            <Button
                android:id="@+id/setting_sdcard"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textColor="#000000"
                android:background="@color/white"
               android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/Record"
                 android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               
                android:background="#e4e4e4" />       
            <Button
                android:id="@+id/setting_reboot"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
               android:background="@color/white"
                 android:textColor="#000000"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/setttingsrestart"
                android:textSize="16sp" />
            
             <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               
                android:background="#e4e4e4" />

            <Button
                android:id="@+id/setting_ap"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/arrow"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/newbuttontop"
                 android:textColor="#000000"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/setting_ap"
                android:textSize="16dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               
                android:background="#e4e4e4" />

            <!-- <Button
                android:id="@+id/setting_reboot"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/newbuttonall"
                android:drawableLeft="@drawable/wifi_setting"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/restart"
                android:textSize="16dp" /> -->
                
                <!--<Button
                android:id="@+id/setting_restore_factory"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/newbuttonall"
                android:drawableLeft="@drawable/mail_setting"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/setting_restore_factory"
                android:textSize="16dp" 
                />-->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>