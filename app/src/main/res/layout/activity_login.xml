<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#8669FC"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/Welcomelivisa"
            android:textSize="28dp"
            android:textColor="#fff"
            android:fontFamily="@font/montbold"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/toaccess"
            android:textColor="#fff"
            android:textSize="16dp"
            android:fontFamily="@font/montsemibold"
            />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:background="@drawable/whitebg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_20dp">


            <RelativeLayout
                android:id="@+id/loginSc"
                android:layout_width="match_parent"
                android:layout_height="500dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_20dp"
                    >


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/montbold"
                        android:text="@string/Username"
                        android:textColor="#000"
                        android:textSize="18dp" />


                    <com.livixa.apacam.client.widget.CustomEditText
                        android:id="@+id/et_username"
                        android:layout_width="300dp"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/inputrounded"
                        android:fontFamily="@font/montregular"
                        android:hint="@string/UserNameHint"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="#6E8498"
                        android:textColorHint="#6E8498"
                        android:textSize="@dimen/font_large"
                        app:CustomFontFamily="Light"

                        />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/montbold"
                        android:text="Password"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <com.livixa.apacam.client.widget.CustomEditText
                        android:id="@+id/et_password"
                        android:layout_width="300dp"
                        android:layout_height="48dp"
                        android:background="@drawable/inputrounded"
                        android:fontFamily="@font/montregular"
                        android:hint="@string/UserPassHint"
                        android:inputType="textPassword"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="#6E8498"
                        android:textColorHint="#6E8498"
                        android:textSize="@dimen/font_large"
                        app:CustomFontFamily="Light" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_5dp"
                        >


                        <RelativeLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">


                            <CheckBox
                                style="@style/CustomCheckbox02"
                                android:layout_width="22dp"
                                android:layout_height="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:background="@drawable/check_box_selector" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="30dp"
                                android:fontFamily="@font/montsemibold"
                                android:text="@string/safepass"
                                android:textColor="#002B54"
                                android:textSize="14sp" />

                            <com.livixa.apacam.client.widget.CustomTextView
                                android:id="@+id/tv_forgot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="100dp"
                                android:fontFamily="@font/montsemibold"
                                android:text="@string/ForgotPassword"
                                android:textColor="#002B54"

                                android:textSize="14sp"
                                app:CustomFontFamily="Light" />

                        </RelativeLayout>
                    </LinearLayout>




                    <com.livixa.apacam.client.widget.CustomButton
                        android:id="@+id/btn_login"
                        style="@style/ButtonStyle"
                        android:layout_width="300dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:background="@drawable/ic_reset_password_btn"
                        android:fontFamily="@font/montsemibold"
                        android:text="@string/Login"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_large" />


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:fontFamily="@font/montsemibold"
                            android:text="Sign in with Touch Id"
                            android:textAlignment="center" />

                        <ImageView
                            android:id="@+id/fingerlogin"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_touchid_ic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montsemibold"
                            android:text="New to Livixa"
                            android:textAlignment="center"
                            android:textSize="@dimen/font_normal" />

                        <TextView
                            android:id="@+id/tv_sign_up"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montsemibold"
                            android:text="Signup for an account"
                            android:textAlignment="center"
                            android:textSize="@dimen/font_normal" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_message_lyout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.livixa.apacam.client.widget.CustomTextView

                        android:id="@+id/tv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Please wait while your data is \n  being downloaded!"
                        android:textColor="@color/color_white"
                        android:textSize="18dp"
                        android:visibility="gone"
                        app:CustomFontFamily="Bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />
                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

    </LinearLayout>




</RelativeLayout>