<RelativeLayout 
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/switch_two_layoutt"
    android:layout_width="match_parent">
<LinearLayout 
    
    android:layout_width="match_parent"
                
                android:orientation="vertical"
               
                 android:gravity="center_horizontal"
                android:layout_height="match_parent">
                
           <LinearLayout
               android:layout_width="200dp"
               android:layout_marginTop="@dimen/margin_30dp"
               android:layout_height="160dp"
               android:background="@drawable/corner_border_white"
               android:orientation="vertical"
               >

               <ImageView android:layout_height="115dp"
                   android:background="@drawable/corner_border_gray"
                   android:id="@+id/switchIcon"
                   android:layout_marginTop="@dimen/margin_10dp"
                   android:src="@drawable/two_button_switch"
                   android:layout_width="155dp"
                   android:layout_gravity="center"
                   />
               <TextView android:layout_height="wrap_content"
                   android:id="@+id/switchTitle"
                   android:textColor="#000"
                   android:text="switch"
                   android:layout_marginTop="3dp"
                   android:textSize="17dp"
                   android:textAlignment="center"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"/>

           </LinearLayout>

            
            <RelativeLayout android:layout_height="wrap_content"
                            
                            android:layout_marginTop="45dp"
                            android:layout_width="match_parent">
               
                
                
                <LinearLayout android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center"
                                  android:layout_centerInParent="true"
                                  android:layout_width="match_parent">
                                  
                    
                    <RelativeLayout android:layout_height="105dp"
                    			android:orientation="vertical"
                    			android:id="@+id/rLayoutControl0"
                    			android:background="@drawable/corner_border_gray"
                    		  android:layout_centerInParent="true"
                              android:layout_width="105dp">
                     
                
                
                 <ImageView android:layout_height="45dp"
                        android:layout_centerInParent="true"
                       
                        android:src="@drawable/ic_light_off_ic"
                        android:id="@+id/bulbIconButton"
                        android:layout_width="40dp"/>
                 
                 

                
                </RelativeLayout>
                                  
                    
                
                <RelativeLayout android:layout_height="105dp"
                    			android:orientation="vertical"
                    			android:layout_marginLeft="30dp"
                    			
                    			android:id="@+id/rLayoutControl21"
                    android:background="@drawable/corner_border_gray"
                    		  android:layout_centerInParent="true"
                              android:layout_width="105dp">


                    <ImageView
                        android:id="@+id/bulbIconButton2"

                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_light_off_ic" />
                 
                 

                
                </RelativeLayout>
                
                
                </LinearLayout>
                
            </RelativeLayout>
              
            
            
            
             </LinearLayout>
             </RelativeLayout>
          
            
