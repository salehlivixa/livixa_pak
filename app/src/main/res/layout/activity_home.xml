<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="10"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_size"
            android:background="#8669FC">


            <ImageView
                android:id="@+id/iv_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30dp"
                android:layout_marginTop="@dimen/margin_25dp"
                android:clickable="true"
                android:onClick="onViewProfile"
                android:src="@drawable/ic_profile_ic" />


            <ImageView
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:visibility="visible"
                app:CustomFontFamily="Regular" />


            <ImageView
                android:id="@+id/rl_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_25dp"
                android:layout_marginRight="@dimen/margin_30dp"
                android:src="@drawable/ic_settings_ic" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#8669FC"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"

                    android:fontFamily="@font/montsemibold"
                    android:text="Welcome Back"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:src="@drawable/helloic" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/action_bar_size"
                    android:background="#8669FC"

                    >

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_30dp"
                        android:fontFamily="@font/montsemibold"
                        android:text="Saleh AL Sayari"
                        android:textAlignment="viewStart"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/noti"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_30dp"
                        android:onClick="notification" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/montbold"
                    android:text="Dashboard"
                    android:textColor="#fff"
                    android:textSize="25sp" />


            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-35dp"
            >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="vertical">





            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:orientation="horizontal">


                <RelativeLayout

                    android:layout_width="400dp"
                    android:layout_height="175dp"

                    >


                    <LinearLayout
                        android:id="@+id/rl_rooms"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/roomscard"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_rooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/roomscard"
                            android:visibility="invisible" />

                        <com.livixa.apacam.client.widget.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/Rooms"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_normal"
                            app:CustomFontFamily="Medium" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rl_moods"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="170dp"
                        android:background="@drawable/moodcard"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/roomscard"
                            android:visibility="invisible"

                            />

                        <com.livixa.apacam.client.widget.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/Rooms"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_normal"
                            app:CustomFontFamily="Medium" />


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_1"
                android:layout_marginTop="@dimen/margin_large"
                android:gravity="center"

                android:orientation="horizontal"
                android:visibility="visible">


                <RelativeLayout
                    android:id="@+id/rl_energy"
                    android:layout_width="375dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_large"
                    android:background="@drawable/energyusagecard"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical"

                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montsemibold"
                            android:text="Current Month Usage"
                            android:textColor="#000"
                            android:textSize="12sp"


                            />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montsemibold"
                                android:text="0.0 KWH"
                                android:id="@+id/activity_home_wattage"
                                android:textColor="#000"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montsemibold"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:id="@+id/price"
                                android:textColor="#000"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">


                <RelativeLayout
                    android:layout_width="375dp"
                    android:layout_height="200dp"
                    android:background="@drawable/whitecard"
                  >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_10dp"
                      android:layout_marginLeft="@dimen/margin_40dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subscription"
                            android:textColor="#000"
                            android:fontFamily="@font/montbold"
                            android:textSize="16sp"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        >

                        <TextView
                            android:id="@+id/activity_home_package_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Package 1"
                            android:textColor="#000"
                            android:fontFamily="@font/montbold"
                            android:layout_marginRight="110dp"
                            android:textSize="16sp"
                        />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/activity_home_package_expriy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_30dp"
                            android:layout_marginRight="60dp"
                            android:fontFamily="@font/montbold"
                            android:text="Expiry: 20 June"
                            android:textSize="16sp" />

                    </LinearLayout>





                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <object.p2pipcam.system.MyTextView
        android:id="@+id/syncDataTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#00ADEF"
        android:clickable="true"
        android:ellipsize="marquee"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="onBannerClick"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/YourdatasyncedMSG"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="invisible" />


    <LinearLayout android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/progress_bg"
        android:id="@+id/profileContainer"
        android:visibility="gone"
        android:clickable="true"
        android:onClick="onBackgroundClick"
        android:layout_width="match_parent">

        <LinearLayout android:layout_height="250dp"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_25dp"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/margin_25dp"
            android:background="@drawable/corner_border_light_gray"
            android:layout_width="match_parent">

            <TextView android:layout_height="50dp"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:text="@string/Youaresignedinas"
                android:gravity="center"
                android:layout_width="match_parent"/>

            <View android:layout_height="1dp"
                android:background="#C1C1C1"
                android:layout_width="match_parent"/>



            <com.kisafa.user.profile.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profile_round"
                app:civ_border_width="2dp"
                android:id="@+id/iv_profile"
                android:clickable="true"
                android:onClick="onViewProfile"
                app:civ_border_color="#00000000" />
            <TextView android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>