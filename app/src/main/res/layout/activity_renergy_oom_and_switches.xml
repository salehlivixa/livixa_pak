<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/roomsMainLayout"
        android:weightSum="10"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rl_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#8669FC" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="@dimen/margin_30dp"
                android:rotation="180"
                android:layout_alignParentLeft="true"
                android:onClick="onbackButttonClick"
                android:padding="@dimen/padding_large"
                android:src="@drawable/ic_back__1_ara" />

            <com.livixa.apacam.client.widget.CustomTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RoomSwitches"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="18dp"

                android:visibility="visible"
                app:CustomFontFamily="Regular" />

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="60dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:clickable="true"

                android:onClick="onhomeButttonClick"
                android:padding="@dimen/padding_large"
                android:src="@drawable/home" />
        </RelativeLayout>

        <!--  // -->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/whitebg"
        android:orientation="vertical"
        >

        <RelativeLayout android:layout_width="match_parent"
            android:layout_weight="8"
            android:layout_height="0dp">

            <LinearLayout android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_width="match_parent">
                <View android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_width="0dp"/>

                <GridView
                    android:id="@+id/roomSwitchesGridView"
                    android:visibility="visible"
                    android:numColumns="2"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:listSelector="@android:color/transparent"
                    android:stretchMode="spacingWidthUniform"
                    android:gravity="center"
                    android:columnWidth="130dp"
                    android:verticalSpacing="10dp"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:scrollbars="none"
                    android:layout_centerHorizontal="true"
                    android:layout_height="match_parent">



                </GridView>


                <View android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_width="0dp"/>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/roomSwitchesEmptylayout"
                android:layout_weight="8"
                android:visibility="gone"

                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView android:layout_height="150dp"
                    android:alpha="0.08"
                    android:layout_centerInParent="true"
                    android:src="@drawable/exclamation_mark"
                    android:layout_width="150dp"/>
                <com.livixa.apacam.client.widget.CustomTextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="No switches added yet!"

                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:visibility="visible"
                    app:CustomFontFamily="Regular" />

            </RelativeLayout>




        </RelativeLayout>



    </LinearLayout>




    <!--  aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa-->



    <!--  aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa-->


    <!--  aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa-->



    <!--  aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa-->





</RelativeLayout>