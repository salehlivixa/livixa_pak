<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
   
    android:orientation="vertical" >
    
    
    
    
    <LinearLayout android:layout_width="130dp"
        android:id="@+id/tileLayout"
        android:layout_marginTop="15dp"
                        android:layout_height="130dp"
                        android:gravity="center"
                         android:background="@drawable/button_selector_home"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_camera_home" />

                    <com.livixa.apacam.client.widget.CustomTextView
                         android:id="@+id/iv_camerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        
                        android:gravity="center"
                        android:text="Camera"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                         />
                    <com.livixa.apacam.client.widget.CustomTextView
                         android:id="@+id/iv_MacAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                       
                        android:gravity="center"
                        android:text="PH-123456789"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        />
       </LinearLayout>

    <CheckBox
        android:id="@+id/camera_CheckBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:button="@null"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/check_box_selector"
        android:gravity="center"
        android:paddingLeft="-2dp" />

</RelativeLayout >
