<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

   
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/rl_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size"
                android:background="@color/app_header_color" >
                
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    android:onClick="onbackButttonClick"
                    android:padding="@dimen/padding_large"
                    android:src="@drawable/ic_back" />

                <com.livixa.apacam.client.widget.CustomTextView
                    android:id="@+id/tv_title"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:text="@string/TARIFF"
                    android:layout_marginBottom="13dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                   
                    android:visibility="visible"
                    app:CustomFontFamily="Regular" />

               <com.livixa.apacam.client.widget.CustomTextView
                   
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:text="@string/Options"
                    android:layout_marginBottom="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:clickable="true"
                    android:onClick="onOptionClick"
                    android:visibility="visible"
                    app:CustomFontFamily="Regular" />
               
               

            </RelativeLayout>
            
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                         
                          android:weightSum="5"
                          android:orientation="vertical"
                          android:layout_weight="2"
                >
                
                <LinearLayout 
                     android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    >
                    
                     <ImageView
                android:id="@+id/logo"
                android:layout_width="130dp"
                
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/margin_max_x_large2"
                android:src="@drawable/logo" />
                    
                </LinearLayout>

           
            
            </LinearLayout>
            
           <!--  // -->
           
           
           <LinearLayout   android:layout_height="50dp"
                           android:background="#CECFD1"
                           android:weightSum="10"
                           android:orientation="horizontal"
                           android:layout_width="match_parent">
                
             <TextView android:layout_height="match_parent"
                       android:layout_weight="1.3"
                       android:gravity="center"
                       android:textColor="@color/black"
                       android:text="#"
                       android:layout_width="0dp"/>
             
             
             <View    android:layout_height="match_parent"
                      android:background="#BBBCBE"
                      android:layout_width="1dp"/>
             
             
             <TextView android:layout_height="match_parent"
                       android:layout_weight="5"
                       android:gravity="center"
                       android:id="@+id/watageUnit"
                       android:textColor="@color/black"
                       android:text="Slab in kWh"
                       android:layout_width="0dp"/>
             
             
             <View    android:layout_height="match_parent"
                      android:background="#BBBCBE"
                      android:layout_width="1dp"/>
             
             <TextView android:layout_height="match_parent"
                       android:layout_weight="3.7"
                       android:gravity="center"
                       android:id="@+id/priceUnit"
                       android:textColor="@color/black"
                       android:text="Residentail Tariff in $"
                       android:layout_width="0dp"/>
               
               
           </LinearLayout>
           
           
           
           
           <ListView android:id="@+id/tariffListView"
               android:cacheColorHint="#00000000"
               android:layout_marginTop="10dp"
               android:layout_weight="8"
               
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
               
           </ListView>
           
           <RelativeLayout 
                android:id="@+id/tariffEmptylayout"
                android:layout_weight="8"
                android:layout_marginTop="10dp"
                android:visibility="gone"
               
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                
               <ImageView android:layout_height="150dp"
                          android:alpha="0.08"
                          android:layout_centerInParent="true"
                        android:src="@drawable/exclamation_mark"
                          android:layout_width="150dp"/>
                <com.livixa.apacam.client.widget.CustomTextView
                  
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:text="@string/Notariffaddedyet"
                    
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:visibility="visible"
                    app:CustomFontFamily="Regular" />
               
           </RelativeLayout>
           
           
           

          
            
             </LinearLayout>
   
</RelativeLayout>