<?xml version="1.0" encoding="utf-8"?>

<com.livixa.apacam.client.swipelistview.SwipeRevealLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    
    android:id="@+id/switchesListItemRoot"
   
    app:_mode="same_level"
    app:dragEdge="right"
    >
    
    
    
<FrameLayout
            android:layout_width="wrap_content"
            android:background="#40ffffff"
            android:gravity="center" 
            android:layout_height="60dp">
            
        
          <RelativeLayout android:layout_height="match_parent"
       			 
                  android:layout_width="80dp">
                  
               <TextView android:layout_height="match_parent"
               android:background="#FF3B30"
               android:text="@string/Delete"
                android:textColor="@color/white"
               android:gravity="center"
               android:layout_alignParentRight="true"
              
               android:id="@+id/tv_switchDelete"
                android:layout_width="80dp"
                />
              
              
                  </RelativeLayout>
            
        
  </FrameLayout>
    
    

       
        <FrameLayout
            android:layout_width="match_parent"
            android:background="#40ffffff"
            android:gravity="center" 
            android:layout_height="60dp">
            
            <LinearLayout android:layout_height="50dp"
                android:id="@+id/itemContainerLY"
       			 android:orientation="horizontal"
       			 android:weightSum="5"
       			 android:layout_marginTop="5dp"
       			 android:gravity="center_vertical"
       			  
                  android:layout_width="match_parent">
                  
                
                
	          <ImageView android:layout_height="40dp"
	        		android:id="@+id/img_icon_switch"
	       			android:layout_marginLeft="10dp"
	        		android:layout_centerVertical="true"
	              	android:src="@drawable/one_button_switch"
	               	android:layout_width="40dp"/>
	        
	    
			              <TextView 
			        android:id="@+id/tv_switchName"
			        android:layout_width="0dp"
			        android:layout_weight="5"
			        android:text="switch1"
			        android:singleLine="true"
			        android:layout_centerVertical="true"
			        android:gravity="center_vertical|left"
			        android:textColor="@color/white"
			        android:textSize="16dp"
			        android:paddingLeft="10dp"
			        android:paddingRight="10dp"
			        android:layout_height="wrap_content"/>
			              
			       <LinearLayout android:layout_height="match_parent"
			                      android:layout_gravity="right"
			                      android:gravity="center"
			                      android:orientation="vertical"
			                      android:layout_marginRight="25dp"
			                      android:layout_width="150dp">
			                      
			           
			           <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="match_parent"
                        android:background="@drawable/corner_border_white_less_less_corner"
                        android:layout_height="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="left|center_vertical"
                        android:layout_centerHorizontal="true"
                       
                        android:text="@string/Assignedto"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:id="@+id/switchAssignedTo"
                        />
			           
			            <LinearLayout android:layout_width="match_parent" 
			                         android:orientation="horizontal"
			                         
			                         android:layout_marginTop="3dp"
			                         android:background="@drawable/corner_border_white_less_less_corner"
			                         android:layout_height="18dp">
			           
			           <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        
                       
                        android:layout_height="18dp"
                        android:paddingLeft="5dp"
                        android:textAlignment="viewEnd"
                        
                        android:paddingRight="5dp"
                        
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical|right"
                        android:text="@string/ID"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        
                        />   
			               
			               
			           <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        
                        
                        android:layout_height="18dp"
                        android:paddingLeft="5dp"
                        android:textAlignment="viewEnd"
                        
                        android:paddingRight="5dp"
                       
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical|right"
                        android:text="N/A"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:id="@+id/switchId"
                        />
			           
			           
			            
			               
			           
			           </LinearLayout>
			           
			       </LinearLayout>
    
    
    </LinearLayout>
        
        </FrameLayout>

</com.livixa.apacam.client.swipelistview.SwipeRevealLayout>




