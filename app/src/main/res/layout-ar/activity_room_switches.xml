<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#8669FC"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            >


            <RelativeLayout
                android:id="@+id/rl_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size"
                >


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:onClick="onbackButttonClick"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:src="@drawable/ic_back__1_ara" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montbold"
                    android:text="@string/RoomSwitches"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="-20dp"
                    android:clickable="true"
                    android:onClick="onhomeButttonClick"
                    android:padding="@dimen/padding_large"
                    android:src="@drawable/home" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/whitebg"
        android:orientation="vertical"
        >



        <RelativeLayout android:layout_width="match_parent"
            android:layout_weight="8"
            android:layout_height="0dp">

            <LinearLayout android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_width="match_parent">
                <View android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_width="0dp"/>

                <GridView
                    android:id="@+id/roomSwitchesGridView"
                    android:visibility="visible"
                    android:numColumns="3"
                    android:listSelector="@android:color/transparent"
                    android:stretchMode="spacingWidthUniform"
                    android:gravity="center"
                    android:columnWidth="100dp"
                    android:layout_marginTop="@dimen/margin_10dp"

                    android:verticalSpacing="15dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:scrollbars="none"
                    android:layout_centerHorizontal="true"
                    android:layout_height="match_parent">



                </GridView>


                <View android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_width="0dp"/>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/roomSwitchesEmptylayout"
                android:layout_weight="8"
                android:visibility="gone"
                android:background="@drawable/corner_border_gray"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView android:layout_height="150dp"
                    android:alpha="0.08"
                    android:layout_centerInParent="true"
                    android:src="@drawable/exclamation_mark"
                    android:layout_width="150dp"/>
                <com.livixa.apacam.client.widget.CustomTextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/Noswitchesaddedyet"

                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:visibility="visible"
                    app:CustomFontFamily="Regular" />

            </RelativeLayout>




        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:clickable="true"
            android:weightSum="10"
            android:gravity="center"
            android:layout_height="130dp"
            android:background="#8669FC"
            >

            <com.devsmart.android.ui.HorizontalListView
                android:id="@+id/hlistview"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                />

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>