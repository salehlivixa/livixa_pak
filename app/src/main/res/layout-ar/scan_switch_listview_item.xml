<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="false"
    android:rotationY="180"
    android:id="@+id/switchesListItemRoot"
   
    
    >
    
    <FrameLayout
            android:layout_width="match_parent"
            android:background="#40ffffff"
            android:gravity="center" 
            android:layout_height="75dp">
            
            <LinearLayout android:layout_height="75dp"
                android:id="@+id/itemContainerLY"
       			 android:orientation="horizontal"
       			 android:weightSum="5"
       			 
       			 android:layout_marginTop="0dp"
       			 android:gravity="center_vertical"
       			  android:clickable="true"
                  android:layout_width="match_parent">
                  
                
                
	          <ImageView android:layout_height="40dp"
	        		android:id="@+id/img_icon_switch"
	       			android:layout_marginLeft="10dp"
	       			android:rotationY="180"
	        		android:layout_centerVertical="true"
	              	android:src="@drawable/one_button_switch"
	               	android:layout_width="40dp"/>
	        
	    
			              <TextView 
			        android:id="@+id/tv_switchName"
			        android:layout_width="0dp"
			        android:layout_weight="5"
			        android:text="switch1"
			        android:singleLine="true"
			        android:layout_centerVertical="true"
			         android:gravity="center_vertical|right"
			        android:textColor="@color/white"
			        android:textSize="16dp"
			        android:rotationY="180"
			        android:layout_marginLeft="10dp"
			        android:paddingRight="10dp"
			        android:layout_height="wrap_content"/>
			       
			              
			              
			        <LinearLayout android:layout_height="match_parent"
			                     
			                      android:gravity="center"
			                      
			                      android:orientation="horizontal"
			                      android:layout_marginRight="20dp"
			                      android:layout_width="170dp">    
			                      
			            
			       <ImageView android:layout_height="wrap_content"
			                  android:id="@+id/ipStatus"
			                  android:src="@drawable/ip_available_red"
			                  android:layout_marginRight="7dp"
			                  android:layout_marginTop="2dp"
			                  android:layout_gravity="center_vertical"
			                  android:layout_width="20dp"/>
			       
			       <LinearLayout android:layout_height="match_parent"
			                      android:layout_gravity="right"
			                      android:gravity="center"
			                      android:orientation="vertical"
			                      
			                      android:layout_width="140dp">
			            
			           <LinearLayout android:layout_width="match_parent" 
			                         android:orientation="horizontal"
			                         
			                         android:background="@drawable/corner_border_white_less_less_corner"
			                         android:layout_height="18dp">
			                         
			                <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        
                        android:layout_height="18dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:rotationY="180"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical|right"
                        android:text="@string/MAC"
                       
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        />
			           <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        
                        android:layout_height="18dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:rotationY="180"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical|right"
                        android:text="2093B901"
                        android:id="@+id/switchId"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        />
			           
			          
			           
			           </LinearLayout>
			           
			           
			           <LinearLayout android:layout_width="match_parent" 
			                         android:orientation="horizontal"
			                        
			                         android:layout_marginTop="3dp"
			                         android:background="@drawable/corner_border_white_less_less_corner"
			                         android:layout_height="18dp">
			           
			            <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        
                       
                        android:layout_height="18dp"
                        android:paddingLeft="5dp"
                        android:textAlignment="viewEnd"
                        
                        android:paddingRight="5dp"
                        android:rotationY="180"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical|right"
                        android:text="@string/IP"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        
                        />   
			               
			               
			               
			           <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        
                        
                        android:layout_height="18dp"
                        android:paddingLeft="5dp"
                        android:textAlignment="viewEnd"
                        
                        android:paddingRight="5dp"
                        android:rotationY="180"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical|right"
                        android:text="N/A"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:id="@+id/switchIP"
                        />
			           
			           </LinearLayout>
			           
			          <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="match_parent"
                        android:background="@drawable/corner_border_white_less_less_corner"
                        android:layout_height="18dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical|right"
                        android:text="Assigned to: Vv"
                        android:rotationY="180"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:id="@+id/switchAssignedTo"
                        />
			           
			       </LinearLayout>
			       
			       
			        </LinearLayout>
    
    
    </LinearLayout>
        
        </FrameLayout>

</RelativeLayout>




