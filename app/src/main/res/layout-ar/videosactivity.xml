<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        style="@style/top_bg_style"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:rotationY="180"
        android:orientation="horizontal">

        <object.p2pipcam.system.MyTextView
            android:id="@+id/text_v"
            android:rotationY="180"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20.0dip"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:gravity="left|center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="120dp"
            android:scrollHorizontally="true"
            android:shadowColor="@color/color_shadow"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:text="@string/CVideo"
            android:textColor="@color/color_white"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/top1"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:gravity="right"
            android:orientation="horizontal">

            <object.p2pipcam.system.MyTextView
                android:id="@+id/picture_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/camera_bg_rect_local"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_normal"
                android:singleLine="true"
                 android:rotationY="180"
                android:text="@string/Local"
                android:minWidth="70dp"
                android:textColor="@color/color_white" />

            <object.p2pipcam.system.MyTextView
                android:id="@+id/picture_remote"
                android:rotationY="180"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/camera_bg_rect_remote"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_normal"
                android:singleLine="true"
                android:minWidth="70dp"
                android:text="@string/Remote"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/piclistview"
        android:rotationY="180"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:cacheColorHint="#00000000"
        android:divider="@color/color_divider"
        android:dividerHeight="1dp"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:padding="1dp" />


</LinearLayout>