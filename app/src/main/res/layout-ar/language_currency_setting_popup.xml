<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/screen_faded"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

         <LinearLayout
           
            android:layout_width="match_parent"
             android:gravity="center"
             android:weightSum="10"
             android:orientation="horizontal"
             android:layout_height="match_parent">

   
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_border_light_gray"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                
                 android:layout_marginRight="10dp"
                android:paddingTop="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:paddingBottom="15dp">
                
                
                 <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:alpha="0.8"
                    android:rotationY="180"
                    android:visibility="visible"
                    android:background="@drawable/add_room_popup_tv_bg"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                     >
                
                
                <TextView
                   
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                     android:rotationY="180"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:text="@string/Language"
                    android:hint=""
                    
                   
                    android:textColor="#2379D2"
                    android:textSize="18dp" />
                
                
                <com.livixa.apacam.client.widget.CustomTextView
                    android:id="@+id/engTV"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="12dp"
                     android:rotationY="180"
                    android:text=""
                    android:hint="ENGLISH"
                    android:alpha="0.8"
                    
                    android:background="@drawable/add_room_popup_tv_bg"
                   android:textColor="@color/grgray"
                    android:textSize="18dp" />
                
                </LinearLayout>
                
                 
                 
                
                
                <LinearLayout
                   
                    android:id="@+id/currencyLY"
                    android:layout_width="match_parent"
                    android:alpha="0.8"
                     android:rotationY="180"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/add_room_popup_tv_bg"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                     >
                
                
                <TextView
                    
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    
                    android:paddingLeft="12dp"
                    android:text="@string/Currency"
                    android:paddingRight="12dp"
                     android:rotationY="180"
                   
                    android:textColor="#2379D2"
                    android:textSize="18dp" />
                
                
                <com.livixa.apacam.client.widget.CustomTextView
                    android:id="@+id/curTV"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:rotationY="180"
                    android:hint="SAR"
                    android:alpha="0.8"
                    
                    android:background="@drawable/add_room_popup_tv_bg"
                   android:textColor="@color/grgray"
                    android:textSize="18dp" />
                
                </LinearLayout>
                
               

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                   android:gravity="center"
                     >

                    <object.p2pipcam.system.MyTextView
                        
                        android:layout_width="0dp"
                        android:layout_weight="4.8"
                        android:layout_height="45dp"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:focusableInTouchMode="true"
                        android:id="@+id/tv_Done"
                        android:visibility="gone"
                        android:background="@drawable/popup_button_selector_white"
                        android:layout_marginRight="10dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Done"
                        android:textColor="#2379D2"
                        android:textSize="22dp" />
                    
                    
                     <object.p2pipcam.system.MyTextView
                        
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:ellipsize="marquee"
                        android:gravity="center"
                       android:layout_weight="9.5"
                        android:focusableInTouchMode="true"
                        android:id="@+id/tv_Cancel"
                         android:background="@drawable/popup_button_selector_white"
                       
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/Cancel"
                        android:textColor="#2379D2"
                        android:textSize="22dp" />

                    
                </LinearLayout>
                
                
                

                
 </LinearLayout>
 
            
                
        </LinearLayout>
        
        </LinearLayout>
   

</RelativeLayout>