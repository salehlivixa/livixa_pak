<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical" >




        <LinearLayout
            android:id="@+id/tileLayout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/corner_border_white"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="151dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/corner_border_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_10dp">

                <ImageView
                    android:id="@+id/iv_img_placeHolder"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/placeholder" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10dp">

                <com.livixa.apacam.client.widget.CustomTextView
                    android:id="@+id/iv_bedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:fontFamily="@font/montsemibold"
                    android:text="Bed"
                    android:textColor="#002B54"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/roomsSettingIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:src="@drawable/ic_edit_room_ic"

                    />
            </RelativeLayout>

        </LinearLayout>



</RelativeLayout>
