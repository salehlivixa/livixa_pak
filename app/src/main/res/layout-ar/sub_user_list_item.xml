<?xml version="1.0" encoding="utf-8"?>

<com.livixa.apacam.client.swipelistview.SwipeRevealLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:id="@+id/subUsersListRoot"
   
    app:_mode="same_level"
    app:dragEdge="right"
    >
    
    
    
<FrameLayout
            android:layout_width="wrap_content"
            android:background="#40ffffff"
            android:layout_height="match_parent">
            
        
          <RelativeLayout android:layout_height="wrap_content"
       			 
                  android:layout_width="80dp">
                  
               <TextView android:layout_height="50dp"
               android:background="#FF3B30"
               android:text="@string/Delete"
                android:textColor="@color/white"
               android:gravity="center"
               android:layout_alignParentRight="true"
               android:rotationY="180"
               android:id="@+id/tv_sub_UserDelete"
                android:layout_width="80dp"
                />
              
              
                  </RelativeLayout>
            
        
  </FrameLayout>
    
    

       
        <FrameLayout
            android:layout_width="match_parent"
            android:background="#40ffffff"
            android:layout_height="match_parent">
            
            <LinearLayout android:layout_height="50dp"
                android:id="@+id/itemContainerLY"
       			 android:orientation="horizontal"
       			 android:weightSum="5"
       			 android:gravity="center_vertical"
       			  
                  android:layout_width="match_parent">
                  
                
                
                <ImageView android:layout_height="40dp"
        android:id="@+id/img_icon"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
               android:src="@drawable/sub_user_contact_icon"
               android:layout_width="40dp"/>
        
    
    <TextView 
        android:id="@+id/tv_subUserName"
        android:layout_width="0dp"
        android:layout_weight="3.5"
        android:text="abc123"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|right"
        android:textColor="@color/white"
        android:rotationY="180"
       
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>
    
    
    </LinearLayout>
        
        </FrameLayout>
    
    
   
    
    

</com.livixa.apacam.client.swipelistview.SwipeRevealLayout>




