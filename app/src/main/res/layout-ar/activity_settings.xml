<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

   
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/rl_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size"
                android:background="@color/app_header_color" >
                
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:rotation="180"
                    android:padding="@dimen/padding_large"
                    android:src="@drawable/ic_back" />

                <com.livixa.apacam.client.widget.CustomTextView
                    android:id="@+id/tv_title"
                   android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/Settings"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_large_extra"
                    android:visibility="visible"
                    app:CustomFontFamily="Regular" />

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                   
                    android:clickable="true"
                    android:onClick="onhomeButttonClick"
                    android:layout_marginBottom="-10dp"
                    android:padding="@dimen/padding_large"
                    android:src="@drawable/home" />
            </RelativeLayout>
            
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                         
                          android:weightSum="5"
                          android:orientation="vertical"
                          android:layout_weight="2"
                >
                
                <LinearLayout 
                     android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    >
                    
                     <ImageView
                android:id="@+id/logo"
                android:layout_width="130dp"
                
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/margin_max_x_large2"
                android:src="@drawable/logo" />
                    
                </LinearLayout>

           
            
            </LinearLayout>
            
            
            
            <ScrollView 
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_weight="8"
                android:layout_height="0dp">
            
            <LinearLayout 
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                
           

            <LinearLayout
                android:id="@+id/ll_1"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_add_edit_switch"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="@dimen/margin_large"
                    
                    android:background="@drawable/button_selector_home"
                    android:gravity="center"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_add_edit_switch"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:src="@drawable/icon_edit_switches" />

                        <com.livixa.apacam.client.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/AddEditSwitches"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_normal"
                            app:CustomFontFamily="Medium" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_add_edit_rooms"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="@dimen/margin_large"
                   
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >
                    
                    
                    
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_add_edit_rooms"
                        android:layout_width="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_room_home" />

                    <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/AddEditRooms"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                        app:CustomFontFamily="Medium" />
                        
                    </LinearLayout>

                   
                </RelativeLayout>

            </LinearLayout>
            
            
            <LinearLayout
                android:id="@+id/ll_2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_1"
                android:layout_marginLeft="@dimen/margin_max_x_large4"
                android:layout_marginRight="@dimen/margin_max_x_large4"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_lang"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_weight="0.42"
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >
                    
                    
                    
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_lang"
                        android:layout_width="63dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="55dp"
                        android:src="@drawable/icon_lang_currency" />

                    <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Language &amp; Currency"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                        app:CustomFontFamily="Medium" />
                        
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_system"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_weight="0.42"
                        android:background="@drawable/button_selector_home"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/iv_system"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/icon_reset" />

                            <com.livixa.apacam.client.widget.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="System Reset"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_normal"
                                app:CustomFontFamily="Medium" />
                        </LinearLayout>
                    </RelativeLayout>
                   
                </RelativeLayout>
            </LinearLayout>
            
            
            
             <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="horizontal" >

                 <RelativeLayout
                     android:id="@+id/rl_control_remotly"
                     android:layout_width="130dp"
                     android:layout_height="130dp"
                     android:layout_marginRight="@dimen/margin_large"
                     android:background="@drawable/button_selector_home"
                     android:gravity="center" >

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:orientation="vertical" >

                         <com.livixa.apacam.client.activity.ShSwitchView
                             xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                             android:id="@+id/remotlySwitch"
                             android:layout_width="75dip"
                             android:layout_height="50dip"
                             android:layout_marginBottom="4dp"
                             shSwitch:shadowSpace="7dip"
                             shSwitch:tintColor="#097BFF" />

                         <com.livixa.apacam.client.widget.CustomTextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerHorizontal="true"
                             android:gravity="center"
                             android:text="@string/ControlRemotly"
                             android:textColor="@color/black"
                             android:textSize="@dimen/font_normal"
                             app:CustomFontFamily="Medium" />
                     </LinearLayout>
                 </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_inside_home"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >
                    
                    
                    
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_inside"
                        android:layout_width="60dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_control_home" />

                    <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/Controlinsidehome"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                        app:CustomFontFamily="Medium" />
                        
                    </LinearLayout>

                   
                </RelativeLayout>
            </LinearLayout>
            
             
              <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                  <RelativeLayout
                      android:id="@+id/rl_edit_users"
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      android:layout_marginRight="@dimen/margin_large"
                      android:background="@drawable/button_selector_home"
                      android:gravity="center" >

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:orientation="vertical" >

                          <ImageView
                              android:id="@+id/iv_edit_users"
                              android:layout_width="60dp"
                              android:layout_height="wrap_content"
                              android:layout_marginBottom="12dp"
                              android:src="@drawable/icon_edit_users" />

                          <com.livixa.apacam.client.widget.CustomTextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_centerHorizontal="true"
                              android:gravity="center"
                              android:text="@string/EditUsers"
                              android:textColor="@color/black"
                              android:textSize="@dimen/font_normal"
                              app:CustomFontFamily="Medium" />
                      </LinearLayout>
                  </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_configureSwitches"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >
                    
                    
                    
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_switchConfiguration"
                        android:layout_width="70dp"
                        android:layout_marginBottom="12dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_config_switch" />

                    <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/ConfigureSwitches"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:CustomFontFamily="Medium" />
                        
                    </LinearLayout>

                   
                </RelativeLayout>
            </LinearLayout>
            
              
              
              
               <LinearLayout
                android:id="@+id/ll_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                   <RelativeLayout
                       android:id="@+id/rl_profile"
                       android:layout_width="130dp"
                       android:layout_height="130dp"
                       android:layout_marginRight="@dimen/margin_large"
                       android:background="@drawable/button_selector_home"
                       android:gravity="center" >

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:gravity="center"
                           android:orientation="vertical" >

                           <ImageView
                               android:id="@+id/iv_profile"
                               android:layout_width="60dp"
                               android:layout_height="wrap_content"
                               android:layout_marginBottom="12dp"
                               android:src="@drawable/icon_profile" />

                           <com.livixa.apacam.client.widget.CustomTextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerHorizontal="true"
                               android:gravity="center"
                               android:text="@string/Profile"
                               android:textColor="@color/black"
                               android:textSize="@dimen/font_normal"
                               app:CustomFontFamily="Medium" />
                       </LinearLayout>
                   </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_energy"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >
                    
                    
                    
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_energy"
                        android:layout_width="70dp"
                        android:layout_marginBottom="12dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_tariff" />

                    <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/ElectricityTariff"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:CustomFontFamily="Medium" />
                        
                    </LinearLayout>

                   
                </RelativeLayout>
            </LinearLayout>
            
               
               <LinearLayout
                android:id="@+id/ll_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                   <RelativeLayout
                       android:id="@+id/rl_changePass"
                       android:layout_width="130dp"
                       android:layout_height="130dp"
                       android:layout_marginRight="@dimen/margin_large"
                       android:background="@drawable/button_selector_home"
                       android:gravity="center" >

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:gravity="center"
                           android:orientation="vertical" >

                           <ImageView
                               android:id="@+id/iv_changPass"
                               android:layout_width="50dp"
                               android:layout_height="wrap_content"
                               android:layout_marginBottom="12dp"
                               android:src="@drawable/icon_changepassword" />

                           <com.livixa.apacam.client.widget.CustomTextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerHorizontal="true"
                               android:gravity="center"
                               android:text="@string/ChangePassword"
                               android:textColor="@color/black"
                               android:textSize="@dimen/font_normal"
                               app:CustomFontFamily="Medium" />
                       </LinearLayout>
                   </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_about"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >
                    
                    
                    
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_about"
                        android:layout_width="50dp"
                        android:layout_marginBottom="12dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_about" />

                    <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/KAbout"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:CustomFontFamily="Medium" />
                        
                    </LinearLayout>

                   
                </RelativeLayout>

            </LinearLayout>
            
               
                 <LinearLayout
                android:id="@+id/ll_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
                android:gravity="center"
               android:visibility="visible"
                android:orientation="horizontal" >

                     <RelativeLayout
                         android:id="@+id/emptylyout"
                         android:layout_width="130dp"
                         android:layout_height="130dp"
                         android:layout_marginRight="@dimen/margin_large"
                         android:gravity="center" >
                     </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_language"
                    android:layout_width="130dp"
                    
                    android:layout_height="130dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >
                    
                    
                    
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_language"
                        android:layout_width="60dp"
                        android:layout_marginBottom="12dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_lang_currency" />

                    <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/Language_Currency"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:CustomFontFamily="Medium" />
                        
                    </LinearLayout>

                   
                </RelativeLayout>
            </LinearLayout>
           
			<LinearLayout
                android:id="@+id/ll_8"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="visible"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_max_x_large4"
                android:layout_marginRight="@dimen/margin_max_x_large4"
                android:layout_marginTop="30dp"
                 
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_logout"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    
                    
                    android:background="@drawable/corner_border_white"
                    android:gravity="center" >
                    
                    
                    
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                       
                        android:orientation="horizontal"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_logout"
                        android:layout_width="65dp"
                        
                        android:layout_height="40dp"
                        android:src="@drawable/icon_logout" />

                    <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/Logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                        app:CustomFontFamily="Medium" />
                        
                    </LinearLayout>

                   
                </RelativeLayout>
            </LinearLayout>
           
       </LinearLayout>
       
            </ScrollView>
            
             </LinearLayout>
   
</RelativeLayout>