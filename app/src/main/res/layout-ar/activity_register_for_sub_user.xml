<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#8669FC"
        >

        <RelativeLayout
            android:id="@+id/rl_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_size"
            >


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:clickable="true"
                android:onClick="onbackButttonClick"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montbold"
                android:text="إضافة / تعديل مستخدمين"
                android:textColor="#fff"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:background="@drawable/whitebg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_sign"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_35dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/montbold"
                        android:text="اسم المستخدم"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <com.livixa.apacam.client.widget.CustomEditText
                        android:id="@+id/et_username"
                        android:layout_width="300dp"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/inputrounded"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/montregular"
                        android:hint="@string/UserNameHint"
                        android:inputType="text"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#6E8498"
                        android:textColorHint="#6E8498"
                        android:textSize="@dimen/font_large"
                        app:CustomFontFamily="Light"

                        />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_35dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/montbold"
                        android:text="بريد إلكتروني"
                        android:textColor="#000"
                        android:textSize="18dp" />


                    <com.livixa.apacam.client.widget.CustomEditText
                        android:id="@+id/et_email"
                        android:layout_width="300dp"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/inputrounded"
                        android:fontFamily="@font/montregular"
                        android:hint="ادخل بريدك الإلكتروني"
                        android:inputType="text"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#6E8498"
                        android:textColorHint="#6E8498"
                        android:textSize="@dimen/font_large"
                        app:CustomFontFamily="Light" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_35dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/montbold"
                        android:text="بريد إلكتروني"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <com.livixa.apacam.client.widget.CustomEditText
                        android:id="@+id/et_password"
                        android:layout_width="300dp"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/inputrounded"
                        android:fontFamily="@font/montregular"
                        android:hint="ادخل كلمة المرور"
                        android:inputType="text"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#6E8498"
                        android:textColorHint="#6E8498"
                        android:textSize="@dimen/font_large"
                        app:CustomFontFamily="Light" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:visibility="gone"
                    >


                    <com.livixa.apacam.client.widget.CustomEditText
                        android:id="@+id/et_country"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/inputrounded"
                        android:fontFamily="@font/montregular"
                        android:hint="@string/Country"
                        android:inputType="text"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#6E8498"
                        android:textColorHint="#6E8498"
                        android:textSize="@dimen/font_large"
                        app:CustomFontFamily="Light" />

                    <com.livixa.apacam.client.widget.CustomEditText
                        android:id="@+id/et_city"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/inputrounded"
                        android:fontFamily="@font/montregular"
                        android:hint="@string/City"
                        android:inputType="text"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#6E8498"
                        android:textColorHint="#6E8498"
                        android:textSize="@dimen/font_large"
                        app:CustomFontFamily="Light" />
                </LinearLayout>


                <com.livixa.apacam.client.widget.CustomButton
                    android:id="@+id/btn_register"
                    style="@style/ButtonStyle"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_reset_password_btn"
                    android:fontFamily="@font/montsemibold"
                    android:text="@string/Register"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_large"
                    app:CustomFontFamily="Regular" />

            </LinearLayout>

        </RelativeLayout>

        //welcomescreen

        <RelativeLayout android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"

            android:id="@+id/welComeScreen"
            android:layout_height="match_parent">

            <ImageView

                android:layout_height="match_parent"

                android:background="@drawable/bg"
                android:layout_width="match_parent"/>

            <View android:layout_height="match_parent"
                android:background="#80FFFFFF"
                android:layout_width="match_parent"/>

            <LinearLayout android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content">

                <View android:layout_height="80dp"
                    android:layout_width="match_parent"/>


                <com.livixa.apacam.client.widget.CustomTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:text="@string/Thankyouregisteringwithus"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_marginBottom="30dp"
                    app:CustomFontFamily="MYR_PRO" />

                <ImageView

                    android:layout_height="180dp"
                    android:alpha="0.09"
                    android:src="@drawable/smiling_icon"
                    android:layout_width="180dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>