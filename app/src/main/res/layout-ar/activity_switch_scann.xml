<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#8669FC"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            >


            <RelativeLayout
                android:id="@+id/rl_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size"
                >


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:onClick="onbackButttonClick"
                    android:src="@drawable/ic_back__1_ara" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montbold"
                    android:text="@string/ScanSwitches"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <com.livixa.apacam.client.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:fontFamily="@font/montbold"
                    android:id="@+id/startScan"
                    android:clickable="true"
                    android:onClick="onStartScann"
                    android:text="@string/Start"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/whitebg"
        android:orientation="vertical"
        >


        <ListView android:id="@+id/switchListView"
            android:cacheColorHint="#00000000"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:listSelector="@android:color/transparent"
            android:stretchMode="spacingWidthUniform"
            android:gravity="center"
            android:columnWidth="200dp"
            android:verticalSpacing="10dp"
            >

        </ListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/switchEmptylayout"
            android:layout_weight="6"
            android:visibility="gone"

            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_no_data"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="لا توجد مفاتيح مضافة بعد!"
                android:textColor="#000"
                android:textSize="25sp"
                android:textAlignment="center"
                android:fontFamily="@font/montbold"
                />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="انتقل إلى الإعدادات وأضف واحدة"
                android:textAlignment="center"
                android:fontFamily="@font/montsemibold"
                android:layout_gravity="center_vertical|center_horizontal"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:clickable="true"
            android:weightSum="10"
            android:layout_height="0dp">


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>