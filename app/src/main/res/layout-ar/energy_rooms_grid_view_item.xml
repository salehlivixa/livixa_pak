<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    >
    
    

   
    
<RelativeLayout 
    android:layout_width="140dp"
    android:layout_height="150dp"
    
    android:orientation="vertical" >
    
    
    
    
    <LinearLayout android:layout_width="120dp"
        android:id="@+id/tileLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
                        android:layout_height="120dp"
                        android:gravity="center"
                         android:background="@drawable/corner_border_white"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_img_placeHolder"
                        android:layout_width="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="60dp"
                        android:src="@drawable/placeholder" />

                    <com.livixa.apacam.client.widget.CustomTextView
                         android:id="@+id/iv_bedName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        
                        android:gravity="center"
                        android:text="Bed"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                         />
                   
       </LinearLayout>
       
    
    <TextView android:layout_width="85dp"
                  android:layout_centerHorizontal="true"
                  android:id="@+id/roomCostUsage"
                  android:text="0$"
                  android:gravity="center"
                  android:textColor="@color/white"
                 
                  android:background="@drawable/button_border_common_unpressed"
                  android:layout_height="18dp">
        
    </TextView>
                   
                    
    <TextView android:layout_width="85dp"
                  android:id="@+id/roomEnergyUsage"
                  android:layout_below="@id/roomCostUsage"
                  android:layout_centerHorizontal="true"
                  android:text="0kWh"
                  android:layout_marginTop="1dp"
                  android:gravity="center"
                  android:textColor="@color/white"
                 
                  android:background="@drawable/moods_status_active_bg"
                  android:layout_height="18dp">
        
    </TextView>

    

</RelativeLayout >


 


</RelativeLayout>
