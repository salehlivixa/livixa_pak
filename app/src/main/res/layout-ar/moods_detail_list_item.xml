<?xml version="1.0" encoding="utf-8"?>
<com.livixa.apacam.client.swipelistview.SwipeRevealLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    
    android:id="@+id/moodsListItemRoot"
   
    app:_mode="same_level"
    app:dragEdge="right"
    >
    
    
    
<FrameLayout
            android:layout_width="wrap_content"
            android:background="#40ffffff"
            android:gravity="center" 
            android:layout_height="100dp">
            
        
          <RelativeLayout android:layout_height="match_parent"
       			 
                  android:layout_width="80dp">
                  
               <TextView android:layout_height="match_parent"
               android:background="#FF3B30"
               android:text="@string/Delete"
                android:textColor="@color/white"
               android:gravity="center"
               android:layout_alignParentRight="true"
               android:rotationY="180"
               android:id="@+id/tv_switchDelete"
                android:layout_width="80dp"
                />
              
              
                  </RelativeLayout>
            
        
  </FrameLayout>
    
    

       
        <FrameLayout
            android:layout_width="match_parent"
            android:background="#40ffffff"
            android:gravity="center" 
            android:layout_height="100dp">
            
            <LinearLayout android:layout_height="100dp"
                android:id="@+id/itemContainerLY"
       			 android:orientation="horizontal"
       			 android:weightSum="5"
       			 
       			 android:gravity="center_vertical"
       			  
                  android:layout_width="match_parent">
                  
                
                <LinearLayout 
    
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="#F2F2F2">
<RelativeLayout
    
    android:layout_width="match_parent"
    android:layout_height="98dp"
   
    >    
    
    <RelativeLayout  android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center_horizontal"
                   android:id="@+id/startLy"
                   android:layout_width="95dp"
        >
        
        
        <RelativeLayout 
            android:layout_height="80dp"
                   
                   android:layout_marginTop="8dp"
                   android:gravity="center"
                   android:background="@drawable/moods_status_bg"
                    android:layout_width="80dp">
                    
            <ImageView android:layout_height="55dp"
                android:layout_marginTop="3dp"
                android:id="@+id/moodIcon"
            android:padding="3dp"
            android:rotationY="180"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_mood_guest"
                    android:layout_width="55dp"/>
        <TextView 
        android:id="@+id/tv_MoodName"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="12dp"
        android:singleLine="false"
        android:layout_marginBottom="8dp"
        android:rotationY="180"
        android:gravity="center"
        android:text="Guest"
        
       
       
        
       
        android:layout_height="wrap_content"/>
            
        </RelativeLayout>
        
        
    </RelativeLayout>
    
    <LinearLayout android:layout_height="match_parent"
        android:background="#F15A24"
                   android:layout_marginTop="12dp"
                   android:layout_marginRight="4dp"
                   android:orientation="vertical"
                   android:layout_marginBottom="12dp"
                   android:layout_toRightOf="@id/startLy"
                   android:layout_width="match_parent">
        
         <object.p2pipcam.system.MyTextView
            android:id="@+id/mooddate"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#221236"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:rotationY="180"
            android:text="Date: Repeate"
            android:textColor="@color/white" />
         
         
         
         
         <object.p2pipcam.system.MyTextView
            android:id="@+id/moodTime"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#3EA9FB"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Time: 12:34"
            android:rotationY="180"
            android:textColor="@color/white" />
         <object.p2pipcam.system.MyTextView
            android:id="@+id/moodStatus"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#F4BA28"
            android:rotationY="180"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Button State: ON"
            android:textColor="@color/white" />
       
    </LinearLayout>
    
</RelativeLayout>
</LinearLayout>
	          
    
    
            </LinearLayout>
        
        </FrameLayout>

</com.livixa.apacam.client.swipelistview.SwipeRevealLayout>




















