<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/rl_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size"
                android:background="@color/app_header_color" >




                <com.kisafa.user.profile.CircleImageView
           			 android:layout_width="30dp"
            		 android:layout_height="30dp"
            		 android:layout_alignParentRight="true"
           			 android:layout_centerVertical="true"
           			 android:layout_marginEnd="16dp"
			         android:src="@drawable/profile_round"
			         app:civ_border_width="2dp"
			         android:id="@+id/iv_profile_button"
			         android:clickable="true"
			         android:onClick="onViewProfile"
            		  app:civ_border_color="#00000000" />

                <com.livixa.apacam.client.widget.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/Welcome"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_extra_large"
                    android:visibility="visible"
                    app:CustomFontFamily="Regular" />

            </RelativeLayout>



            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"

                          android:weightSum="5"
                          android:orientation="vertical"
                          android:layout_weight="2"
                >


                <LinearLayout
                     android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    >

                     <ImageView
                android:id="@+id/logo"
                android:layout_width="130dp"

                android:layout_height="70dp"
                android:layout_marginTop="@dimen/margin_max_x_large2"
                android:src="@drawable/logo" />

                </LinearLayout>



            </LinearLayout>



            <ScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_weight="8"
                android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:drawingCacheQuality="low"
                android:gravity="center"
                android:layout_height="match_parent">



            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_camera"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:visibility="gone"
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >




                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/iv_camera"
                            android:layout_width="70dp"

                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_camera_home" />

                        <com.livixa.apacam.client.widget.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_camera"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="@string/Camera"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_normal"
                            app:CustomFontFamily="Medium" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_rooms"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_rooms"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/icon_room_home" />

                        <com.livixa.apacam.client.widget.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/Rooms"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_normal"
                            app:CustomFontFamily="Medium" />
                    </LinearLayout>
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rl_moods"
                    android:layout_width="130dp"
                    android:layout_height="130dp"


                    android:layout_marginRight="@dimen/margin_large"
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >


                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/iv_moods"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/icon_moods_home" />

                        <com.livixa.apacam.client.widget.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_moods"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/Moods"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_normal"
                            app:CustomFontFamily="Medium" />

                    </LinearLayout>


                </RelativeLayout>
                <!-- <RelativeLayout
                    android:id="@+id/rl_rooms"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_weight="0.42"
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >


                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:orientation="vertical"
                        >

                    <ImageView
                        android:id="@+id/iv_room"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/icon_room_home" />

                    <com.livixa.apacam.client.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
