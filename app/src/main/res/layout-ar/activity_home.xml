                        android:text="Rooms"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                        app:CustomFontFamily="Medium" />

                    </LinearLayout>


                </RelativeLayout> -->
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_1"
                android:visibility="visible"
                android:gravity="center"

                android:layout_marginTop="@dimen/margin_large"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_energy"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_energy"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/icon_energy_home" />

                        <com.livixa.apacam.client.widget.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_energy"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/EnergyUsage"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_normal"
                            app:CustomFontFamily="Medium" />
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_settings"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="@dimen/margin_large"

                    android:background="@drawable/button_selector_home"
                    android:gravity="center" >


                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/iv_settings"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/icon_settings_home" />

                        <com.livixa.apacam.client.widget.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_settings"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/Settings"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_normal"
                            app:CustomFontFamily="Medium" />

                    </LinearLayout>


                </RelativeLayout>



            </LinearLayout>



             <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_2"
                android:visibility="visible"
                  android:gravity="center"

                android:layout_marginTop="@dimen/margin_large"
                android:orientation="horizontal" >

                 <RelativeLayout
                     android:id="@+id/rl_empty"
                     android:layout_width="130dp"
                     android:layout_height="130dp"
                     android:layout_marginLeft="@dimen/margin_large"
                     android:gravity="center" >
                 </RelativeLayout>




            </LinearLayout>


       </LinearLayout>

            </ScrollView>

             </LinearLayout>

        <object.p2pipcam.system.MyTextView
                    android:id="@+id/syncDataTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ellipsize="marquee"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="50dp"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:background="#00ADEF"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:visibility="invisible"
                    android:text="@string/YourdatasyncedMSG"
                    android:clickable="true"
                    android:onClick="onBannerClick"
                    android:textSize="13sp"
                    />


        <LinearLayout android:layout_height="match_parent"
                      android:gravity="center"
                      android:background="@color/progress_bg"
                      android:id="@+id/profileContainer"
                      android:visibility="gone"
                      android:clickable="true"
                      android:onClick="onBackgroundClick"
                      android:layout_width="match_parent">

        <LinearLayout android:layout_height="250dp"
                      android:clickable="true"
                      android:layout_centerInParent="true"
                      android:layout_marginLeft="@dimen/margin_25dp"
                      android:orientation="vertical"
                      android:layout_marginRight="@dimen/margin_25dp"
                      android:background="@drawable/corner_border_light_gray"
                      android:layout_width="match_parent">

            <TextView android:layout_height="50dp"
                      android:textColor="@color/black"
                      android:textSize="19dp"
                      android:text="@string/Youaresignedinas"
                      android:gravity="center"
                      android:layout_width="match_parent"/>

            <View android:layout_height="1dp"
                  android:background="#C1C1C1"
                  android:layout_width="match_parent"/>



            <com.kisafa.user.profile.CircleImageView
           			 android:layout_width="100dp"
            		 android:layout_height="100dp"
           			 android:layout_marginTop="25dp"
           			 android:layout_gravity="center_horizontal"
			         android:src="@drawable/profile_round"
			         app:civ_border_width="2dp"
			         android:id="@+id/iv_profile"
			         android:clickable="true"
			         android:onClick="onViewProfile"
            		  app:civ_border_color="#00000000" />
            <TextView android:layout_height="wrap_content"
                      android:text=""
                      android:id="@+id/userName"
                      android:textColor="@color/black"
                       android:layout_gravity="center_horizontal"
                      android:layout_marginTop="15dp"
                      android:textSize="22dp"
                      android:textStyle="bold"
                      android:layout_width="wrap_content"/>


        </LinearLayout>

            </LinearLayout>

</RelativeLayout>