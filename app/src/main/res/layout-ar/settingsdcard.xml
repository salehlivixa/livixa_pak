<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
        style="@style/top_bg_style"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_selector_common"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxWidth="100dp"
            android:minWidth="55dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="@string/back"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_title_size" />

        <object.p2pipcam.system.MyTextView
            android:id="@+id/tv_camera_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="150dp"
            android:scrollHorizontally="true"
            android:shadowColor="@color/color_shadow"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:text="@string/SdcardSetting"
            android:textColor="@color/color_white"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dip"
            android:background="@drawable/button_selector_common"
            android:maxWidth="100dp"
            android:minWidth="55dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="@string/done"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_title_size" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/list_bg"
                android:orientation="vertical"
                android:rotationY="180"
                android:padding="10dp" >

                <RelativeLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical" >

                    <object.p2pipcam.system.MyTextView
                        android:id="@+id/textView1"
                        android:rotationY="180"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                        android:gravity="left|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="200dp"
                        android:minWidth="90dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/sdcard_total"
                        android:textColor="@color/color_black" 
                        />

                    <object.p2pipcam.system.MyTextView
                        android:id="@+id/tv_sd_total"
                        android:rotationY="180"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                        android:gravity="left|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="200dp"
                        android:minWidth="90dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/color_black" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@color/color_grey" />

                <RelativeLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical" >

                    <object.p2pipcam.system.MyTextView
                        android:id="@+id/textView5"
                        android:rotationY="180"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                         android:gravity="right|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="200dp"
                        android:minWidth="90dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/sdcard_remain"
                        android:textColor="@color/color_black" />

                    <object.p2pipcam.system.MyTextView
                        android:id="@+id/tv_sd_remain"
                        android:rotationY="180"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                        android:gravity="left|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="200dp"
                        android:minWidth="90dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/color_black" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@color/color_grey" />

                <RelativeLayout
                    android:id="@+id/linearLayout16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/sdstate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:text="@string/sdcard_state"
                        android:textColor="@color/color_black" />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/sdstate"
                        android:text=""
                        android:textColor="@color/color_black" />

                    <Button
                        android:id="@+id/btn_format"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/sdcard_format"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@color/color_grey"
                     />

                <RelativeLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    
                    <CheckBox
		                    android:id="@+id/cbx_coverage"
		                    android:layout_width="30dp"
		                    android:rotationY="180"
		                    android:layout_height="30dp"
		                    android:layout_alignParentRight="true"
		                    android:layout_centerVertical="true"
                            android:layout_gravity="right"
		                    android:background="@drawable/check_box_selector"
		                    android:button="@null"
		                    />

                    <object.p2pipcam.system.MyTextView
                        android:id="@+id/textView9"
                        android:rotationY="180"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                        android:gravity="left|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="200dp"
                        android:minWidth="90dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/sdcard_cover_record"
                        android:textColor="@color/color_black" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@color/color_grey" />

                <RelativeLayout
                    android:id="@+id/linearLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                   
                      <CheckBox
		                    android:id="@+id/cbx_void"
		                    android:layout_width="30dp"
		                    android:layout_height="30dp"
		                    android:layout_alignParentRight="true"
		                    android:layout_centerVertical="true"
                            android:layout_gravity="right"
		                    android:background="@drawable/check_box_selector"
		                    android:button="@null"
		                    android:rotationY="180"
		                    />

                    <object.p2pipcam.system.MyTextView
                        android:rotationY="180"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                        android:gravity="right|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="200dp"
                        
                        android:minWidth="90dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/sd_record_audio"
                        android:textColor="@color/color_black" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@color/color_grey" />

                <LinearLayout
                    android:id="@+id/linearLayout23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <object.p2pipcam.system.MyTextView
                        android:id="@+id/textView14"
                        android:rotationY="180"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                        android:gravity="left|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="200dp"
                        android:minWidth="90dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/sdcard_recordtime"
                        android:textColor="@color/color_black" />

                    <EditText
                        android:id="@+id/edit_record_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:digits="0123456789"
                        android:hint="@string/sdcard_range"
                        android:inputType="number"
                        android:maxLength="3"
                        android:rotationY="180"
                        
                        android:singleLine="true" >
                    </EditText>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@color/color_grey" />

                <RelativeLayout
                    android:id="@+id/linearLayout26"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    
                     <CheckBox
		                    android:id="@+id/cbx_record_time"
		                    android:layout_width="30dp"
		                    android:layout_height="30dp"
		                    android:layout_alignParentRight="true"
		                    android:layout_centerVertical="true"
                            android:layout_gravity="right"
		                    android:background="@drawable/check_box_selector"
		                    android:button="@null"
		                    android:rotationY="180"
		                    />

                    <object.p2pipcam.system.MyTextView
                        android:id="@+id/textView17"
                         android:gravity="right|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                       
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="200dp"
                        android:rotationY="180"
                        android:minWidth="90dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/sdcard_fixedtime_record"
                        android:textColor="@color/color_black" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/set_sd_show1"
                        android:textColor="#e70000" 
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/linearLayout_start1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" >

                        <object.p2pipcam.system.MyTextView
                            android:id="@+id/textView7"
                            android:rotationY="180"
                           
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="marquee"
                            android:focusableInTouchMode="true"
                            android:gravity="right|center_vertical"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxWidth="200dp"
                            android:minWidth="90dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                           
                            android:text="@string/sdcard_record_starttime"
                            android:textColor="@color/color_black" />

                        <Spinner
                            android:id="@+id/spinner_start"
                            android:layout_width="80dp"
                            android:rotationY="180"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/newbuttonall"
                            android:gravity="center" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/linearLayout_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="gone" >

                    <object.p2pipcam.system.MyTextView
                        android:id="@+id/textView27"
                        android:rotationY="180"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                        android:gravity="right|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="200dp"
                        android:minWidth="90dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/sdcard_record_endtime"
                        android:textColor="@color/color_black" />

                    <Spinner
                        android:id="@+id/spinner_end"
                        android:layout_width="80dp"
                      android:rotationY="180"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/newbuttonall"
                        android:gravity="center" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <Button
                    android:id="@+id/set_sd_format"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/newbuttonall"
                    android:text="@string/sdcard_format" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>