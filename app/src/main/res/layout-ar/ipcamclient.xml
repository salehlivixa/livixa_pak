<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ipcammain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:id="@+id/main_img_bottom_line"
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:src="#ff0044ff"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/del_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:rotationY="180"
            android:padding="5dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/main_selectall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                 android:rotationY="180"
                android:background="@drawable/button_selector_common"
                android:text="@string/main_select_all"
                android:textColor="@color/white" >
            </Button>

            <Button
                android:id="@+id/main_selectreverse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                 android:rotationY="180"
                android:background="@drawable/button_selector_common"
                android:text="@string/main_select_reverse"
                android:textColor="@color/white" >
            </Button>

            <Button
                android:id="@+id/main_delete_camera"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                 android:rotationY="180"
                android:background="@drawable/button_selector_common"
                android:text="@string/Delete"
                android:textColor="@color/white" >
            </Button>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/top_relativeLayout"
                style="@style/top_bg_style"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip" >

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/padding_large"
                    android:src="@drawable/logonew" />

                <object.p2pipcam.system.MyTextView
                    android:id="@+id/myTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/app_home"
                    android:ellipsize="marquee"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxWidth="160dp"
                    android:scrollHorizontally="true"
                    android:shadowColor="@color/color_shadow"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/color_white"
                    android:textSize="18.0sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <object.p2pipcam.system.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/CCamera"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_very_large" />

                <ImageView
                    android:id="@+id/main_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="@dimen/padding_large"
                    android:singleLine="true"
                    android:src="@drawable/iconedit" />

                <ImageButton
                    android:id="@+id/app_home"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                   android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/main_edit"
                    android:background="@drawable/playfourview2"
                    android:visibility="visible" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/addvidicon_listitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_extra_large"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/addCameraLyout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_add_camera"
                    android:gravity="center_vertical"
                    android:rotationY="180"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.90"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_normal"
                        android:paddingTop="@dimen/padding_normal" >

                        <ImageView
                            android:id="@+id/vidicon"
                            android:rotationY="180"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_large"
                            android:src="@drawable/vidicon_add" />

                        <object.p2pipcam.system.MyTextView
                            android:layout_width="wrap_content"
                            android:rotationY="180"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="marquee"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxWidth="200dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="@string/main_tap_here_add_vidicon"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/font_large" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/padding_large" >

                        <ImageView
                            android:id="@+id/refresh"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:paddingLeft="@dimen/padding_normal"
                            android:src="@drawable/refresh" />

                        <ProgressBar
                            android:id="@+id/progressBar1"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="15dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/listviewCamera"
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="1dp"
                android:fadeScrollbars="true"
                android:fadingEdge="none"
                android:fastScrollEnabled="true"
                android:padding="1dp" />
            
            
             <RelativeLayout 
                android:id="@+id/cameraEmptylayout"
                
                android:visibility="gone"
               
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
               <ImageView android:layout_height="150dp"
                          android:alpha="0.08"
                          android:layout_centerInParent="true"
                        android:src="@drawable/exclamation_mark"
                          android:layout_width="150dp"/>
                <com.livixa.apacam.client.widget.CustomTextView
                  
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:text="@string/Nocamerasadded"
                    
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:visibility="visible"
                    app:CustomFontFamily="Regular" />
               
           </RelativeLayout>
            
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>