<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:rotationY="180"
    android:layout_height="140dp"
    
    android:orientation="vertical" >
<RelativeLayout 
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical" >
    
    
    
    
    <LinearLayout android:layout_width="120dp"
        android:id="@+id/tileLayout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
                        android:layout_height="120dp"
                        android:gravity="center"
                         android:background="@drawable/corner_border_white"
                        android:orientation="vertical"
                        >
                        
                         <ImageView
                        android:id="@+id/iv_img_placeHolder"
                        android:layout_width="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="60dp"
                        android:src="@drawable/placeholder" />

                    <com.livixa.apacam.client.widget.CustomTextView
                         android:id="@+id/iv_bedName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        
                        android:gravity="center"
                        android:text="Bed"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                         />
                   
       </LinearLayout>

    <CheckBox
        android:id="@+id/roomSubuser_CheckBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:button="@null"
       
        android:layout_alignParentTop="true"
        android:background="@drawable/check_box_selector"
        android:gravity="center"
        android:paddingLeft="-2dp" />
    
    

</RelativeLayout >
</RelativeLayout>
